<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/notificationItemGuideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/notificationItemGuideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <ImageView
        android:id="@+id/notificationItemProfilePicIV"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circular_drawable_profile_holder"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/notificationItemGuideLine1"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/notificationItemMessageTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/airbnb_cereal_w_lt"
        android:text="David Silbia Invite Jo Malone London’s Mother’s "
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/notificationItemTimeTV"
        app:layout_constraintStart_toEndOf="@id/notificationItemProfilePicIV"
        app:layout_constraintTop_toTopOf="@id/notificationItemProfilePicIV" />

    <TextView
        android:id="@+id/notificationItemTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/airbnb_cereal_w_xbd"
        android:text="Just now"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/notificationItemGuideLine2"
        app:layout_constraintTop_toTopOf="@id/notificationItemMessageTv" />
</androidx.constraintlayout.widget.ConstraintLayout>