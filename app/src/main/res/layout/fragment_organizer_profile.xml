<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OrganizerProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/organizerProfileFragGuideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/organizerProfileFragGuideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView4"
        android:name="com.example.eventbrite.MyProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="-80dp"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:importantForAccessibility="no"
        android:src="@drawable/follow"
        app:layout_constraintBottom_toBottomOf="@+id/followOrganizerBtn"
        app:layout_constraintEnd_toStartOf="@+id/followOrganizerBtn"
        app:layout_constraintTop_toTopOf="@+id/followOrganizerBtn" />

    <Button
        android:id="@+id/followOrganizerBtn"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/eventbrite_card_blue"
        android:fontFamily="@font/airbnb_cereal_w_xbd"
        android:text="@string/follow"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@id/organizerProfileFragGuideLine1"
        app:layout_constraintTop_toBottomOf="@id/fragmentContainerView4" />

    <Button
        android:id="@+id/editProfileOrganizerProfileBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_outline"
        android:text="Edit Profile"
        android:textColor="@color/eventbrite_card_blue"
        app:layout_constraintBottom_toBottomOf="@id/followOrganizerBtn"
        app:layout_constraintEnd_toStartOf="@id/organizerProfileFragGuideLine2"
        app:layout_constraintStart_toEndOf="@id/followOrganizerBtn"
        app:layout_constraintTop_toTopOf="@id/followOrganizerBtn" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tabFragmentContainerView"
        android:name="com.example.eventbrite.AboutFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/organizerProfileFragGuideLine2"
        app:layout_constraintStart_toStartOf="@id/organizerProfileFragGuideLine1"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutOrganizerProfile" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutOrganizerProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@id/organizerProfileFragGuideLine2"
        app:layout_constraintStart_toEndOf="@id/organizerProfileFragGuideLine1"
        app:layout_constraintTop_toBottomOf="@id/followOrganizerBtn"
        app:tabIndicatorColor="@color/eventbrite_card_blue"
        app:tabSelectedTextColor="@color/eventbrite_card_blue">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/aboutTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/eventsTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/events" />

    </com.google.android.material.tabs.TabLayout>
</androidx.constraintlayout.widget.ConstraintLayout>