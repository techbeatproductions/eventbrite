<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NotificationFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/notificationFragGuideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/notificationFragGuideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <ImageView
        android:id="@+id/backBtnInNotificationFragIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="@id/notificationFragGuideLine1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notificationFragScreenNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/airbnb_cereal_w_xbd"
        android:text="Notification"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/backBtnInNotificationFragIV"
        app:layout_constraintStart_toEndOf="@+id/backBtnInNotificationFragIV"
        app:layout_constraintTop_toTopOf="@+id/backBtnInNotificationFragIV" />

    <ImageView
        android:id="@+id/noNotificationsIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="@drawable/no_notification"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/notificationFragGuideLine2"
        app:layout_constraintStart_toStartOf="@id/notificationFragGuideLine1"
        app:layout_constraintTop_toBottomOf="@id/notificationFragScreenNameTV" />

    <TextView
        android:id="@+id/noNotificationsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/airbnb_cereal_w_bk"
        android:text="No Notifications !"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/notificationFragGuideLine2"
        app:layout_constraintStart_toStartOf="@id/notificationFragGuideLine1"
        app:layout_constraintTop_toBottomOf="@id/noNotificationsIV" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationItemRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/notificationFragGuideLine2"
        app:layout_constraintStart_toStartOf="@id/notificationFragGuideLine1"
        app:layout_constraintTop_toBottomOf="@id/notificationFragScreenNameTV"
        tools:listitem="@layout/notification_item" />
</androidx.constraintlayout.widget.ConstraintLayout>